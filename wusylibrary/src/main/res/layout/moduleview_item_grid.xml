<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/moduleview_item_ll"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/moduleview_item_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/moduleview_item_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="内容一"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/textSize_content_small" />

        <TextView
            android:id="@+id/moduleview_item_tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="内容二"
            android:textColor="@color/subColor"
            android:textSize="@dimen/textSize_content_small" />
    </LinearLayout>
</LinearLayout>